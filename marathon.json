{
  "id": "/sys/bitbucket",
  "instances": 1,
  "cpus": 2,
  "mem": 2048,
  "disk": 0,
  "requirePorts": true,
  "backoffSeconds": 1,
  "backoffFactor": 1.15,
  "maxLaunchDelaySeconds": 3600,
  "labels": {
    "owner": "sys"
  },
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "h0tbird/bitbucket:v4.2-1",
      "network": "BRIDGE",
      "portMappings": [
        { "containerPort": 80, "hostPort": 0 }
      ],
      "privileged": false,
      "parameters": [
        { "key": "volume-driver", "value": "rbd" },
        { "key": "volume", "value": "sys-bitbucket:/var/atlassian/application-data/bitbucket" },
        { "key": "security-opt", "value": "label:disable" }
      ],
      "forcePullImage": false
    }
  },
  "healthChecks": [
    {
      "gracePeriodSeconds": 120,
      "intervalSeconds": 30,
      "maxConsecutiveFailures": 3,
      "path": "/",
      "portIndex": 0,
      "protocol": "HTTP",
      "timeoutSeconds": 5
    }
  ],
  "upgradeStrategy": {
    "minimumHealthCapacity": 0,
    "maximumOverCapacity": 1
  }
}
